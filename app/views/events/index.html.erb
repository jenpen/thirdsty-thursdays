<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event %></td>
        <td><%= event.get_human_readable_time %></td>
        <td><%= event.location %></td>
          <td><%= link_to 'View Event', event %></td>
        <% if can? :update, @event %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <% end %>
        <% if can? :destroy, @event %>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn waves-effect waves-light green"><%= link_to 'Create a New Event', new_event_path %></button>
